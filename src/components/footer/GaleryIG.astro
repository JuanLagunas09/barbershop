---
import GaleryItemFooter from "./GaleryItemFooter.astro";
import IconIG from "@/icons/IconIG.astro";
---

<section class="relative w-full">
  <div class="flex flex-wrap w-full h-[230px]">
    <div class="w-1/3 md:w-1/4 lg:w-1/5">
      <GaleryItemFooter imageUri="/img/exampleGaleryIG.webp" />
    </div>
    <div class="w-1/3 md:w-1/4 lg:w-1/5">
      <GaleryItemFooter imageUri="/img/exampleGaleryIG.webp" />
    </div>
    <div class="w-1/3 md:w-1/4 lg:w-1/5">
      <GaleryItemFooter imageUri="/img/exampleGaleryIG.webp" />
    </div>
    <div class="w-1/3 md:w-1/4 lg:w-1/5 hidden md:block">
      <GaleryItemFooter imageUri="/img/exampleGaleryIG.webp" />
    </div>
    <div class="w-1/3 md:w-1/4 lg:w-1/5 hidden lg:block">
      <GaleryItemFooter imageUri="/img/exampleGaleryIG.webp" />
    </div>
  </div>

  <button
    class="btn-ig-footer uppercase absolute bg-green-300
      text-zinc-700 z-[2] hover:bg-button-color
      shadow-sm shadow-gray-500 flex justify-center items-center gap-2"
  >
    <span class="h-7 w-7">
      <IconIG />
    </span>
    <span>Instagram</span>
  </button>
</section>

<style>
  .btn-ig-footer {
    left: calc(50% - 80px);
    bottom: calc(50% - 23px);
    width: 160px;
    height: 46px;
    cursor: pointer;
  }
</style>
