---
import ItemNav from "@/components/navbar/ItemNav.astro";
import Logo from "@/components/navbar/Logo.astro";
import BtnToggleNav from "@/components/navbar/BtnToggleNav.astro";
---

<header
  id="header-nav"
  class="z-[100000] shadow-slate-700 sticky top-0 transition-all ease-in-out duration-500"
>
  <nav class="border-gray-200 py-1 md:py-2 bg-primary-color">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
      <Logo />
      <BtnToggleNav />
      <div class="hidden w-full md:block md:w-auto" id="navbar-menu">
        <ul
          class="font-medium flex flex-col p-4 md:p-0 mt-4 border rounded-lg md:flex-row md:space-x-8 md:mt-0 md:border-0 bg-gray-900 md:bg-primary-color border-gray-800"
        >
          <ItemNav label="Inicio" link="#" />
          <ItemNav label="Servicios" link="#servicios" />
          <ItemNav label="Nosotros" link="#nosotros" />
          <ItemNav label="Galeria" link="#galeria" />
          <ItemNav label="Contacto" link="#contacto" />
        </ul>
      </div>
    </div>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const headerNav = document.getElementById("header-nav");
    if (window.scrollY > 0) {
      headerNav?.classList.add("shadow-md");
    } else {
      headerNav?.classList.remove("shadow-md");
    }
  });
</script>
